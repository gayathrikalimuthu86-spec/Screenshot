import org.openqa.selenium.By;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.Test;

import java.io.File;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.StandardCopyOption;

public class SauceDemoScreenshotTest {
    @Test
    public void takeScreenshots() throws IOException {
        WebDriver driver = new ChromeDriver();
        driver.get("https://www.saucedemo.com/"); 
        String loginScreenshotPath = "screenshots/loginPage.png";
        takeScreenshot(driver, loginScreenshotPath);
        System.out.println("Login Page Screenshot Path: " + new File(loginScreenshotPath).getAbsolutePath());
        driver.findElement(By.id("user-name")).sendKeys("standard_user");
        driver.findElement(By.id("password")).sendKeys("secret_sauce");
        driver.findElement(By.id("login-button")).click();
        String productScreenshotPath = "screenshots/productsPage.png";
        takeScreenshot(driver, productScreenshotPath);
        System.out.println("Products Page Screenshot Path: " + new File(productScreenshotPath).getAbsolutePath());
        driver.quit();
    }

}
